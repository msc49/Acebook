
<div class="container">
  <h1>Welcome to Acebook</h1>
  <br>

<% if current_user %>
  <div class='text-center'>
    <%= image_tag(current_user.avatar.variant(resize_to_limit: [150, 150]), class: "rounded-circle") %>
    <strong><%= "You are signed in as #{current_user.username} (#{current_user.email})"%></strong>
  </div>
  <div class="text-center">
    <%= button_to 'View your feed', posts_path, class: "btn btn-secondary btn-sm", method: "get" %>
  </div>


<%elsif current_user == nil %>
  <button id='sign-up-button'>
    <%= link_to 'Sign Up', new_user_registration_path%>
  </button>

  <button>
    <%= link_to 'Log In', new_user_session_path%>
  </button>
<%end%>
  

  </div>